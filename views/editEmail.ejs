  
<%- include("partials/header") %>
<div class="container-fluid connect-top">
    <div class="container text-center" data-aos="zoom-in" data-aos-once="true">
        <h1>Edit Email</h1>
    </div>
</div>
<div class="container" style="margin-top: -110px; margin-bottom: 100px;">
	<div class="col-md-12 d-flex justify-content-center">
		<div class="reset-wrapper shadow" data-aos="fade-up" data-aos-once="true">
			<form action="/user/<%= user._id %>/editEmail?_method=PUT" method="POST">
				<div class="reset-top">
					<i class="fas fa-envelope"></i>
				</div>
				<div class="input-field d-flex align-items-center justify-content-between" style="padding-left: 20px; padding-right: 20px;">
					<i class="fas fa-lock"></i>
				  	<input type="text" name="email" value="" placeholder="New email" autofocus="autofocus" class="form-control" style="width: 90%; font-size: 13px;"/>
				</div>
				<div class="input-field d-flex align-items-center justify-content-between" style="padding-left: 20px; padding-right: 20px;">
					<i class="fas fa-lock"></i>
				  	<input type="text" name="confirmEmail" value="" placeholder="Confirm email" class="form-control" style="width: 90%; font-size: 13px;"/>
				</div>
				<div class="form-group" style="margin-top: 50px; margin-bottom: 10px;">
				  <button type="submit" id="resetPwd">Save</button>
				</div>
			  </form>
		</div>
	</div>
</div>
<%- include("partials/footer") %>