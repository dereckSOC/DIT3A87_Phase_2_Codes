  
<%- include("partials/header") %>
<div class="container-fluid connect-top">
    <div class="container text-center" data-aos="zoom-in" data-aos-once="true">
        <h1>Reset Password</h1>
        <p>We'll help you get back in your account in no time.</p>
    </div>
</div>
<div class="container" style="margin-top: -110px; margin-bottom: 100px;">
	<div class="col-md-12 d-flex justify-content-center">
		<div class="reset-wrapper shadow">
			<form action="/reset/<%= token %>" method="POST">
				<div class="reset-top">
					<i class="fas fa-exclamation"></i>
				</div>
				<div class="input-field d-flex align-items-center justify-content-between" style="padding-left: 20px; padding-right: 20px;">
					<i class="fas fa-lock"></i>
				  	<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control" style="width: 90%; font-size: 13px;"/>
				</div>
				<div class="input-field d-flex align-items-center justify-content-between" style="padding-left: 20px; padding-right: 20px;">
					<i class="fas fa-lock"></i>
				  	<input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control" style="width: 90%; font-size: 13px;"/>
				</div>
				<div class="form-group" style="margin-top: 50px; margin-bottom: 10px;">
				  <button type="submit" id="resetPwd">Reset</button>
				</div>
			  </form>
		</div>
	</div>
</div>
<%- include("partials/footer") %>