<%- include("../partials/header") %>

  <h1>Edit <%= listing.name %>
  </h1>
  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
    <input type="text" name="listing[name]" value="<%= listing.name %>" placeholder="name">
    <input type="text" name="listing[image]" value="<%= listing.image %>" placeholder="image url">
    <input type="text" name="listing[description]" value="<%= listing.description %>" placeholder="description">
    <input type="text" name="listing[location]" value="<%= listing.location %>">
    <button>submit</button>
  </form>
  <a href="/listings">Go Back</a>

  <%- include("../partials/footer") %>