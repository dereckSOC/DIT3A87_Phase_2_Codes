<%- include("../partials/header") %>

  <% if(listing.archiveStatus==true && listing.soldStatus==false) { %>
    <div class="text-center fixed-top py-1" style="background: #4632DA; color: white; top: 102px; font-weight: 600; font-size: 0.9em;">
      <span>Archived</span>
    </div>
    <div class="mb-4 pb-3"></div>
  <% } else if(listing.archiveStatus==false && listing.soldStatus==true){ %>
    <div class="text-center fixed-top py-1" style="background: #DB0000; color: white; top: 102px; font-weight: 600; font-size: 0.9em;">
      <span>Sold</span>
    </div>
    <div class="mb-4 pb-3"></div>
  <% } else { %>
  <% } %>

  <div class="container pb-0 mt-2">
    <div class="row">
      <div class="col-12 px-0">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/listings">Listings</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= listing.name %></li>
          </ol>
        </nav>
      </div>
      <div class="col-12 pt-3 justify-content-between align-items-center d-flex">
        <div>
          <p class="my-0" style="font-size: 2.6em; font-weight: 350;"><%= listing.name %></p>
        </div>
        <div>
          <div class="justify-content-end d-flex">
            <div>
              <% if(!currentUser){ %>
              <% } else { %>
                <form action="/conversation/<%= currentUser._id %>/<%= listing.author.id %>" method="POST">
                  <button type="submit" class="btn btn-outline-dark">
                    <ion-icon name="chatbox-outline"></ion-icon>
                  </button>
                </form>
              <% } %>
            </div>
            <div class="pl-1">
              <button class="btn btn-outline-dark">
                <ion-icon name="share-outline"></ion-icon>
              </button>
              <a href="mailto:<%= listing.author.email %>" style="color: black; text-decoration: none;">
                <button class="btn btn-outline-dark">
                  <ion-icon name="mail-outline"></ion-icon>
                </button>
              </a>
              <a href="/user/<%= listing.author.id %>" style="text-decoration: none;">
                <button class="btn btn-outline-dark">
                  <ion-icon name="person-outline"></ion-icon>
                </button>
              </a>
            </div>
            <div class="pl-1">
              <form action="/listings/<%= listing._id %>/like" method="POST">
                <% if (currentUser && listing.likes.some(function (like) { return like.equals(currentUser._id) })) { %>
                  <button class="btn btn-outline-dark">
                    <i class="fas fa-heart filledHeart"></i>
                  </button>
                <% } else { %>
                  <button class="btn btn-outline-dark">
                    <ion-icon name="heart-outline" class="pr-1"></ion-icon>
                  </button>
                <% } %>
              </form>
            </div>
            <% if(currentUser && listing.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
              <div class="pl-1">
                <div class="dropdown">
                  <button class="btn btn-outline-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <ion-icon name="ellipsis-vertical-outline"></ion-icon>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/listings/<%= listing._id %>/edit">Edit</a>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                      <button class="dropdown-item">Delete</button>
                    </form>
                    <% if(listing.archiveStatus==false && listing.soldStatus==false){ %>
                      <a class="dropdown-item" href="/listings/<%= listing._id %>/archive">
                        Archive
                      </a>
                      <a class="dropdown-item" href="/listings/<%= listing._id %>/sold">
                        Mark as Sold
                      </a>
                    <% } else if(listing.archiveStatus==true&& listing.soldStatus==false) { %>
                      <a class="dropdown-item" href="/listings/<%= listing._id %>/unarchive">
                        Unarchive
                      </a>
                    <% } else { %>
                      <a class="dropdown-item" href="/listings/<%= listing._id %>/unsold">
                        Mark as Available
                      </a>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-12 pb-3" style="cursor: default;">
        <span class="badge badge-default badge-outlined"><%= listing.district %></span>
        <span class="badge badge-default badge-outlined"><%= listing.type %></span>
        <span class="badge badge-default badge-outlined"><%= listing.tenure %></span>
        <span class="badge badge-default badge-outlined"><%= listing.location %></span>
      </div>
    </div>

    <!-- gallery -->
    <div class="row">
      <div class="col-12 p-0">
        <%- listing.threeDImage %>
      </div>
      <div class="col-8 p-0 galleryThumbnail">
        <a data-fancybox="gallery" href="<%= listing.thumbnail %>" data-type="image">
          <img src="<%= listing.thumbnail %>" class="img-fluid m-0" alt="">
          <div class="mainToggleText">
            <%= listing.image.length + listing.video.length + 1 + " +" %>
          </div>
        </a>
      </div>
      <div class="col-4 p-0 pl-1">
        <div id='map' style="height: 300px!important; width: 100%!important;" class="m-0"></div>
      </div>
      <% for(let i=0; i<listing.image.length; i++){ %>
        <a data-fancybox="gallery" href="<%= listing.image[i] %>" data-type="image"></a>
      <% } %>
      <% for(let i=0; i<listing.video.length; i++) { %>
        <a data-fancybox="gallery" data-width="640" data-height="360" href="<%= listing.video[i] %>">
          <%
          console.log('original video: ', listing.video[i]);
          var slicedVideo = listing.video[i].split(".");
          slicedVideo[slicedVideo.length - 1] = "jpg"
          var videoThumbnail = slicedVideo.join(".");
          %>
          <img class="card-img-top img-fluid d-none" src="<%=videoThumbnail%>" />
        </a>
      <% } %>
    </div>
  </div>

  <div class="container px-0">
    <p class="mb-1" style="font-size: 0.9em;">
      <em>
        Published <%= moment(listing.createdAt).fromNow() %> by 
        <a href="/user/<%= listing.author.id %>"><%= listing.author.username %></a>
      </em>
    </p>
  </div>

  <div class="container pt-2">
    <div class="row">
      <div class="col-8">
        <p class="my-0" style="font-size: 2.6em; font-weight: 350;"><%= listing.name %></p>
        <p class="my-0" style="font-size: 1.5em; font-weight: 650;"><%= "S$" + listing.price %></p>
        <p class="pt-4 align-items-center d-flex" style="font-size: 1.05em;">
          <ion-icon name="business-outline"></ion-icon>
          <span class="pl-2"><%= listing.type %></span>
          <ion-icon class="pl-3" name="compass-outline"></ion-icon>
          <span class="pl-2"><%= listing.district %></span>
          <ion-icon class="pl-3" name="location-outline"></ion-icon>
          <span class="pl-2"><%= listing.location %></span>
        </p>

        <div class="pb-0 justify-content-start d-flex">
          <form action="/listings/<%= listing._id %>/like" method="POST">
            <% if (currentUser && listing.likes.some(function (like) { return like.equals(currentUser._id) })) { %>
              <button class="btn btn-outline-dark">
                <i class="fas fa-heart filledHeart"></i>
                <span>
                  <%= listing.likes.length %> likes
                </span>
              </button>
            <% } else { %>
              <button class="btn btn-outline-dark align-items-center d-flex">
                <ion-icon name="heart-outline" class="pr-1"></ion-icon>
                <span>
                  <%= listing.likes.length %> likes
                </span>
              </button>
            <% } %>
          </form>
          <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#listingLikes">
            See more details
          </button>
        </div>
        <!-- Modal -->
        <div id="listingLikes" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">listing likes: <%= listing.likes.length %>
                </h4>
              </div>
              <div class="modal-body">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Liked by:</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% listing.likes.forEach(function(like) { %>
                      <tr>
                        <td><span class="badge"><i class="fas fa-user"></i></span>
                          <%= like.username %>
                        </td>
                      </tr>
                    <% }); %>
                    <% if (listing.likes.length===0) { %>
                      <tr>
                        <td><em>No likes yet.</em></td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <hr>
        <p style="font-weight: 600; font-size: 1.3em;">Description</p>
        <p style="font-size: 1.05em;"><%= listing.descriptionTitle %></p>
        <p class="pb-3"><%= listing.description %></p>
        <hr>
        <p style="font-weight: 600; font-size: 1.3em;">Property Details</p>
        <div class="row">
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">District</span><br>
            <span><%= listing.district %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Location</span><br>
            <span><%= listing.location %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Type</span><br>
            <span><%= listing.type %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Tenure</span><br>
            <span><%= listing.tenure %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Floor Size</span><br>
            <span><%= listing.size %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Agent</span><br>
            <span><%= listing.author.username %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Bedrooms</span><br>
            <span><%= listing.bedrooms %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Bathrooms</span><br>
            <span><%= listing.bathrooms %></span>
          </div>
          <div class="col-6 pb-3">
            <span style="font-size: 0.9em; font-weight:650;">Listed On</span><br>
            <span><%= moment(listing.createdAt).fromNow() %></span>
          </div>
        </div>
        <hr>
        <p style="font-weight: 600; font-size: 1.3em;">Facilities & Amenities</p>
        <p style="font-size: 1.05em;">
          <div class="row">
            <div class="col-6 pb-3">
              <img src="/img/carpark.svg" alt="" style="width:22px;">
              <span class="pl-2">Nearby carpark</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/swimmingpool.svg" alt="" style="width:30px;">
              <span style="font-size: 0.9em;" class="pl-2">Nearby swimming pool</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/gym.svg" alt="" style="width:25px;">
              <span style="font-size: 0.9em;" class="pl-2">Nearby gym</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/playground.svg" alt="" style="width:22px;">
              <span style="font-size: 0.9em;" class="pl-2">Nearby playground</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/hall.svg" alt="" style="width:22px;">
              <span style="font-size: 0.9em;" class="pl-2">Nearby multi-purpose hall</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/shopping.svg" alt="" style="width:20px;">
              <span style="font-size: 0.9em;" class="pl-2">Nearby shopping mall</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/intercom.svg" alt="" style="width:22px;">
              <span style="font-size: 0.9em;" class="pl-2">Intercom</span><br>
            </div>
            <div class="col-6 pb-3">
              <img src="/img/security.svg" alt="" style="width:22px;">
              <span style="font-size: 0.9em;" class="pl-2">24 hours security</span><br>
            </div>
          </div>
        </p>
        <hr>
        <p style="font-weight: 600; font-size: 1.3em;">Other Nearby Facilities</p>
        <p style="font-size: 1.05em;">
          <div id='map1' style="height: 300px!important; width: 100%!important;" class="m-0 pb-3"></div>
        </p>
        <hr>
        <!-- Collapse Show Comment Section -->
        <div class="text-right">
          <a class="pull-right" role="button" data-toggle="collapse" href="#collapseComment"
            aria-expanded="false" aria-controls="collapseComment" style="text-decoration: none;">
            <ion-icon class="iconHeader" name="add-outline"></ion-icon>
          </a>
        </div>
        <p style="font-weight: 600; font-size: 1.3em;">Comments</p>
        <!-- Collapse Add Comment-->
        <div class="collapse" id="collapseComment">
          <div class="well pl-2" style="border-left: 3px solid #4632DA;">
            <% if(!currentUser) { %>
              <p>You need to login before you can comment. <a href="/login">Click here to login.</a></p>
            <% } %>
            <% if(currentUser) { %>
              <form id="add-comment-form" action="/listings/<%= listing._id %>/comments" method="POST">
                <div class="form-group">
                  <input class="form-control d-none" type="text" name="comment[author]">
                </div>
                <div class="form-group">
                  <textarea class="form-control" name="comment[text]" placeholder="Write a comment..." form="add-comment-form" rows="3" cols="70" required></textarea>
                </div>
                <div class="form-group">
                  <button class="btn btn-outline-dark editDeleteReviewBtn">Post</button>
                </div>
              </form>
            <% } %>
          </div>
        </div>
        <hr>
        <% if (listing.comments.length===0) { %>
          <em style="color: grey;">No comments yet.</em>
        <% } %>
        <% listing.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-12">
              <div class="row">
                <div class="col-1">
                  <a href="/user/<%= comment.author.id %>">
                    <img src="<%= comment.author.image %>" alt="" style="width:150%; border-radius: 50%;">
                  </a>
                </div>
                <div class="col-11">
                  <div class="row">
                    <div class="col-8">
                      <a href="/user/<%= comment.author.id %>" style="text-decoration: none; color: black;">
                        <%= comment.author.username %><br>
                      </a>
                      <span style="font-size: 0.85em; color: black;">
                        <em>
                          <%= moment(comment.createdAt).fromNow() %>
                        </em>
                      </span>
                    </div>
                    <div class="col-4 text-right">
                      <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                        <a class="btn showListingManageBtn p-0" role="button" data-toggle="collapse"
                        href="#collapseEdit<%= comment._id %>" aria-expanded="false"
                        aria-controls="collapse<%= comment._id %>">
                          <ion-icon name="create-outline" class="editBtn py-1"></ion-icon>
                        </a>
                        <form id="delete-form"
                          action="/listings/<%= listing._id %>/comments/<%= comment._id %>?_method=DELETE"
                          method="POST" style="display: inline;">
                          <button class="btn showListingManageBtn p-0">
                            <ion-icon name="trash-outline" class="trashBtn py-1"></ion-icon>
                          </button>
                        </form>
                      <% } %>
                    </div>
                    <div class="col-12">
                      <%= comment.text %>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Edit Form -->
              <div class="collapse" id="collapseEdit<%= comment._id %>">
                <div class="well pl-2" style="border-left: 3px solid #4632DA; margin-top: 15px;">
                  <form id="edit-comment-form<%= comment._id %>"
                    action="/listings/<%= listing._id %>/comments/<%= comment._id %>?_method=PUT"
                    method="POST">
                    <div class="form-group">
                      <textarea class="form-control" name="comment[text]" placeholder="Your comment text..."
                        form="edit-comment-form<%= comment._id %>" rows="3"
                        cols="70"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                      <button class="btn btn-outline-dark editDeleteReviewBtn">Save Changes<span
                          class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                    </div>
                  </form>
                </div>
              </div>
              <hr>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="col-4">
        <div class="item shark-2 text-center p-4" style="border: 1.5px lightgray solid; border-radius: 10px; top:115px;">
          <a href="/user/<%= listing.author.id %>">
            <img src="<%= listing.author.image %>" alt="" style="width: 30%; border-radius: 50%;">
          </a>
          <div>
            <a href="/user/<%= listing.author.id %>" style="color: black;">
              <p class="pt-2 mb-0" style="font-size: 1.15em; font-weight: 600;">
                <%= listing.author.firstName + " " + listing.author.lastName %>
              </p>
            </a>
            <p class="mb-0" style="font-size: 0.9em; font-weight: 350;">
              <em><%= "@" + listing.author.username %></em>
            </p>
            <p class="pt-4 mb-0" style="font-size: 0.9em; font-weight: 350;">
              CEA License <span style="font-weight: 600; font-size: 1.15em;"><%= listing.author.cea %></span>
            </p>
            <p class="" style="font-size: 0.9em; font-weight: 350;">
              Joined on <span style="font-weight: 600; font-size: 1.15em;"><%= moment(listing.author.createdAt).format('MMM DD, YYYY') %></span>
            </p>
            <p class="pt-2" style="font-size: 1.1em; font-weight: 600;">
              <%= listing.author.rating %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const listing = <%- JSON.stringify(listing) %>
  </script>
  <script src="/javascripts/showPageMap.js"></script>
  <script>
    cloudinary
  </script>

<%- include("../partials/footer") %>