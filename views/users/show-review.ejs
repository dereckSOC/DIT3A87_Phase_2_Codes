<% user.reviews.reverse().slice(0, 3).forEach(function(review){ %>
  <div class="row mt-3">
    <div class="col-12">
      <div class="row">
        <div class="col-2 text-center">
          <a href="/user/<%=user._id %>">
            <img src="<%= review.author.image %>"
              style="width: 75px; height: 75px; border-radius: 50%; border: 1px solid gray;">
          </a>
        </div>
        <div class="col-10">
          <div class="row align-items-center d-flex">
            <div class="col-8">
              <p class="mb-0">
                <a href="/user/<%=user._id %>" style="color: black;">
                  <%= review.author.username %>
                </a>
              </p>
              <p class="mb-0 pt-1">
                <%- '<span class="fa fa-star checked"></span>' .repeat(review.rating) %>
                  <%- '<span class="fa fa-star"></span>' .repeat(5 - review.rating) %>
                    <em>
                      <span style="font-size: 0.9em;">
                        <%= "(" + moment(review.createdAt).fromNow() + ")" %>
                      </span>
                    </em>
              </p>
            </div>
            <div class="col-4 justify-content-end d-flex">
              <%if(currentUser&&review.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                <div class="left">
                  <a class="btn btn-outline-dark editDeleteReviewBtn"
                    href="/user/<%=user._id %>/reviews/<%=review._id %>/edit">Edit</a>
                </div>
                <div class="right">
                  <form id="delete-form" action="/user/<%=user._id %>/reviews/<%=review._id %>?_method=DELETE"
                    method="POST">
                    <input type="submit" class="btn btn-outline-dark editDeleteReviewBtn" value="Delete">
                  </form>
                </div>
                <% } %>
            </div>
          </div>
          <p style="text-align: justify; white-space: pre-wrap;" class="mb-0 pt-2">
            <%=review.text%>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% }); %>