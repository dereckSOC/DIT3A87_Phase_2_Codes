<%- include("../partials/header") %>

  <h1>Edit <%= user.username %>
  </h1>

  <form action="/user/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <input type="text" name="user[username]" value="<%= user.username %>" placeholder="username*" required>
    <input type="email" name="user[email]" value="<%= user.email %>" placeholder="email*" required>
    <!-- <input type="password" name="user[password]" value="<%= user.password %>" placeholder="password*" required> -->
    <input type="text" name="user[firstName]" value="<%= user.firstName %>" placeholder="first name">
    <input type="text" name="user[lastName]" value="<%= user.lastName %>" placeholder="last name">
    <img src="<%= user.image %>">
    <input type="file" name="image" accept="image/*">
    <input type="number" name="user[phone]" value="<%= user.phone %>" placeholder="phone">
    <input type="string" name="user[cea]" value="<%= user.cea %>" placeholder="cea number">
    <button>Edit</button>
  </form>

  <%- include("../partials/footer") %>