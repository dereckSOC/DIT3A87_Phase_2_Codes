                    <span>Gender:</span>
                  </div>
                  <div class="col-9">
                    <p>
                      <%= user.gender %>
                    </p>
                  </div>
                  <div class="col-3">
                    <span>Phone:</span>
                  </div>
                  <div class="col-9">
                    <p>
                      <%= user.phone %>
                    </p>
                  </div>
                  <% if(currentUser && user._id.equals(currentUser._id)|| currentUser && currentUser.isAdmin){ %>
