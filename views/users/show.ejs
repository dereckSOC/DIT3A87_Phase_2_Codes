                      <span>Address:</span>
                    </div>
                    <div class="col-9">
                      <p>
                        <%= user.streetName %><br>
                          <%= user.unitNumber %><br>
                            <%= user.country %><br>
                              <%= user.state %><br>
                                <%= user.postalCode %>
                      </p>
                    </div>
                    <% } %>
            </div>
          </div>
          <!-- followers -->
          <div class="col-12 borderStyle">
            <div class="align-items-center d-flex pl-4 pr-2 py-2 justify-content-between headerStyle">
              <div class="left">
                <p class="profileHeader my-0">Followers</p>
              </div>
              <div class="right">
                <button type="button" class="btn btn-outline-dark profileBtn" data-toggle="modal"
                  data-target="#followerTarget">
                  View All
                </button>
              </div>


            </div>
            <div class="px-2">
              <% if(user.followers=="" ){ %>
                <p class="mt-3 px-3">
                  <em>No followers yet.</em>
                </p>
                <% } else { %>
                  <% allFollowers.reverse().slice(0, 3).forEach(function(followers, index) { %>
                    <div class="pt-3">
                      <div class="row align-items-center d-flex">
                        <div class="col-3">
                          <a href="/user/<%= followers._id %>">
                            <img src="<%= followers.image %>"
                              style="width:60px; border: 1px solid gray; border-radius: 50%; object-fit: cover;">
                          </a>
                        </div>
                        <div class="col-6 pr-0">
                          <a href="/user/<%= followers._id %>" style="color: black">
                            <%= followers.username %>
                          </a>
                        </div>
                        <div class="col-3 px-0">
                          <a href="/follow/<%= followers._id %>">
                            <button class="btn btn-outline-dark editDeleteReviewBtn">Follow</button>
                          </a>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                      <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- listings & reviews -->
      <div class="col-8">
        <!-- listings -->
        <div class="col-12 borderStyle">
          <div class="align-items-center d-flex pl-4 pr-2 py-2 mb-4 justify-content-between headerStyle">
            <div class="left">
              <p class="profileHeader my-0">Listings</p>
            </div>
            <div class="right">
              <button type="button" class="btn btn-outline-dark profileBtn" data-toggle="modal"
                data-target="#listingTarget">
                View All
              </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="listingTarget" tabindex="-1" role="dialog"
              aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="justify-content-between align-items-center d-flex border-bottom">
                    <div class="py-4"></div>
                    <div>
                      <p class="modal-title pl-5" id="exampleModalLongTitle">Listings</p>
                    </div>
                    <div>
                      <button type="button" class="close mr-3" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                  </div>
                  <div class="modal-body">
                    <% if(listings==0 ){ %>
                      <p>
                        <em>No listings yet.</em>
                      </p>
                      <% } else { %>
                        <% listings.reverse().forEach(function(listing) { %>
                          <div class="row mb-2 px-2">
                            <div class="col-2">
                              <a href="/listings/<%= listing.id %>">
                                <img src="<%= listing.thumbnail %>"
                                  style="background-size: cover; width: 75px; height: 75px; object-fit: cover; background-position: center center; border-radius: 10px; border: 1px solid gray;">
                              </a>
                            </div>
                            <div class="col-6">
                              <a href="/listings/<%= listing.id %>" style="color: black; font-weight: 600;">
                                <%= listing.name %><br>
                              </a>
                              <p class="mb-1">
                                <% if(listing.description.length<30){ %>
                                  <%= listing.description.substring(0, 30) %>
                                    <% } else { %>
                                      <%= listing.description.substring(0, 30) + " ..." %>
                                        <% } %>
                              </p>
                              <span style="font-size: 0.9em;">
                                <em>
                                  <%= "(" + moment(listing.createdAt).fromNow() + ")" %>
                                </em>
                              </span>
                            </div>
                            <div class="col-4 justify-content-end d-flex pl-0">
                              <%if(currentUser&&listing.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                                <div class="left">
                                  <a class="btn btn-outline-dark profileListingEdit"
                                    href="/listings/<%= listing._id %>/edit">Edit</a>
                                </div>
                                <div class="right">
                                  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-outline-dark profileListingDelete">Delete</button>
                                  </form>
                                </div>
                                <% } %>
                            </div>
                          </div>
                          <% }); %>
                            <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% if(user.isAgent==true || user.isAdmin==true){ %>
            <% if(listings==0){ %>
              <p class="px-4">
                <em>No listings yet.</em>
              </p>
              <% } else { %>
                <div class="row px-2">
                  <% listings.slice(0, 4).forEach(function(listing) { %>
                    <div class="col-3">
                      <div class="row">
                        <div class="col-12">
                          <a href="/listings/<%= listing.id %>">
                            <img src="<%= listing.thumbnail %>"
                              style="background-size: cover; width: 100%; object-fit: cover; background-position: center center; border-radius: 10px; border: 1px solid gray;">
                          </a>
                        </div>
                        <div class="col-12">
                          <a href="/listings/<%= listing.id %>" style="color: black; font-weight: 600;">
                            <% if(listing.name.length<16){ %>
                              <%= listing.name.substring(0, 16) %>
                                <% } else { %>
                                  <%= listing.name.substring(0, 16) + " ..." %>
                                    <% } %>
                          </a>
                        </div>
                        <div class="col-12">
                          <%= "S$" + listing.price %>
                        </div>
                        <div class="col-12">
                          <p class="mb-1">
                            <% if(listing.description.length<18){ %>
                              <%= listing.description.substring(0, 18) %>
                                <% } else { %>
                                  <%= listing.description.substring(0, 18) + " ..." %>
                                    <% } %>
                          </p>
                        </div>
                        <div class="col-12">
                          <span style="font-size: 0.9em;">
                            <%= listing.zone %>
                              <%= listing.numofRooms + " rooms" %>
                                <%= listing.type %>
                          </span>
                        </div>
                        <div class="col-12">
                          <%if(currentUser&&listing.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                            <div class="left">
                              <a class="btn btn-outline-dark profileListingEdit"
                                href="/listings/<%= listing._id %>/edit">Edit</a>
                            </div>
                            <div class="right">

                            </div>
                            <% } %>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                </div>
                <% } %>
                  <% } %>
        </div>
        <!-- reviews -->
        <div class="col-12 borderStyle">
          <div class="align-items-center d-flex pl-4 pr-2 py-2 justify-content-between headerStyle">
            <div class="left">
              <p class="profileHeader my-0">Reviews</p>
            </div>
            <div>
              <% if(currentUser && currentUser.isAgent){ %>
                <% } else { %>
                  <div class="left">
                    <div>
                      <a class="btn btn-outline-dark reviewBtn <% if (currentUser && user.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>"
                        href="/user/<%= user._id %>/reviews/new">
                        Write
                      </a>
                    </div>
                  </div>
                  <% } %>
                    <div class="right">
                      <button type="button" class="btn btn-outline-dark reviewBtn" data-toggle="modal"
                        data-target="#reviewTarget">
                        View All
                      </button>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="reviewTarget" tabindex="-1" role="dialog"
                      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                          <div class="justify-content-between align-items-center d-flex border-bottom">
                            <div class="py-4"></div>
                            <div>
                              <p class="modal-title pl-5" id="exampleModalLongTitle">Reviews</p>
                            </div>
                            <div>
                              <button type="button" class="close mr-3" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                          </div>
                          <div class="modal-body">
                            <% if (user.rating===0) { %>
                              <div class="px-3">
                                <em>No reviews yet.</em>
                              </div>
                              <% } else { %>
                                <% user.reviews.reverse().forEach(function(review){ %>
                                  <div class="row">
                                    <div class="col-12">
                                      <div class="row">
                                        <div class="col-2 text-center">
                                          <a href="/user/<%=user._id %>">
                                            <img src="<%= review.author.image %>"
                                              style="width: 75px; height: 75px; border-radius: 50%; border: 1px solid gray;">
                                          </a>
                                        </div>
                                        <div class="col-10">
                                          <div class="row align-items-center d-flex">
                                            <div class="col-7">
                                              <p class="mb-0">
                                                <a href="/user/<%=user._id %>" style="color: black;">
                                                  <%= review.author.username %>
                                                </a>
                                              </p>
                                              <p class="mb-0 pt-1">
                                                <%- '<span class="fa fa-star checked"></span>' .repeat(review.rating) %>
                                                  <%- '<span class="fa fa-star"></span>' .repeat(5 - review.rating) %>
                                                    <span stlye="font-size: 0.9em;">
                                                      <em>
                                                        <%= "(" + moment(review.createdAt).fromNow() + ")" %>
                                                      </em>
                                                    </span>
                                              </p>
                                            </div>
                                            <div class="col-5 justify-content-end d-flex pl-0">
                                              <%if(currentUser&&review.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                                                <div class="left">
                                                  <a class="btn btn-outline-dark editDeleteReviewBtn"
                                                    href="/user/<%=user._id %>/reviews/<%=review._id %>/edit">Edit</a>
                                                </div>
                                                <div class="right pr-2">
                                                  <form id="delete-form"
                                                    action="/user/<%=user._id %>/reviews/<%=review._id %>?_method=DELETE"
                                                    method="POST">
                                                    <input type="submit"
                                                      class="btn btn-outline-dark editDeleteReviewBtn" value="Delete">
                                                  </form>
                                                </div>
                                                <% } %>
                                            </div>
                                          </div>
                                          <p style="text-align: justify; white-space: pre-wrap;" class="mb-0 pt-2 pr-3">
                                            <%=review.text%>
                                          </p>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <% }); %>
                                    <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
            </div>
          </div>
          <div class="px-2">
            <% if (user.rating===0) { %>
              <div class="mt-3 px-3">
                <em>No reviews yet.</em>
              </div>
              <% } else { %>
                <% user.reviews.reverse().slice(0, 3).forEach(function(review){ %>
                  <div class="row mt-3">
                    <div class="col-12">
                      <div class="row">
                        <div class="col-2 text-center">
                          <a href="/user/<%=user._id %>">
                            <img src="<%= review.author.image %>"
                              style="width: 75px; height: 75px; border-radius: 50%; border: 1px solid gray;">
                          </a>
                        </div>
                        <div class="col-10">
                          <div class="row align-items-center d-flex">
                            <div class="col-8">
                              <p class="mb-0">
                                <a href="/user/<%=user._id %>" style="color: black;">
                                  <%= review.author.username %>
                                </a>
                              </p>
                              <p class="mb-0 pt-1">
                                <%- '<span class="fa fa-star checked"></span>' .repeat(review.rating) %>
                                  <%- '<span class="fa fa-star"></span>' .repeat(5 - review.rating) %>
                                    <em>
                                      <span style="font-size: 0.9em;">
                                        <%= "(" + moment(review.createdAt).fromNow() + ")" %>
                                      </span>
                                    </em>
                              </p>
                            </div>
                            <div class="col-4 justify-content-end d-flex">
                              <%if(currentUser&&review.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                                <div class="left">
                                  <a class="btn btn-outline-dark editDeleteReviewBtn"
                                    href="/user/<%=user._id %>/reviews/<%=review._id %>/edit">Edit</a>
                                </div>
                                <div class="right">
                                  <form id="delete-form"
                                    action="/user/<%=user._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-outline-dark editDeleteReviewBtn"
                                      value="Delete">
                                  </form>
                                </div>
                                <% } %>
                            </div>
                          </div>
                          <p style="text-align: justify; white-space: pre-wrap;" class="mb-0 pt-2">
                            <%=review.text%>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }); %>
                    <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Notifications Modal -->
  <div class="modal fade" id="notificationTarget" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="justify-content-between align-items-center d-flex border-bottom">
          <div class="py-4"></div>
          <div>
            <p class="modal-title pl-5" id="exampleModalLongTitle">Notifications</p>
          </div>
          <div>
            <button type="button" class="close mr-3" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
        <div class="modal-body">
          <% if(allNotifications==0 ){ %>
            <p>
              <em>No notifications yet.</em>
            </p>
            <% } else { %>
              <% allNotifications.reverse().forEach(function(notification) { %>
                <div class="row mb-3 align-items-center d-flex">
                  <div class="col-2">
                    <a href="/user/<%= notification.idUser %>">
                      <img src="<%= notification.image %>" alt="listing image"
                        style="width:60px; border: 1px solid gray; border-radius: 50%; object-fit: cover;">
                    </a>
                  </div>
                  <div class="col-7 pr-0">
                    <a href="/notifications/<%= notification.id %>" style="color:black;">
                      <%= notification.username %> added a new listing
                    </a><br>
                    <span style="font-size: 0.9em;">
                      <em>
                        <%= "(" + moment(notification.createdAt).fromNow() + ")" %>
                      </em>
                    </span>
                  </div>
                  <div class="col-3 justify-content-end d-flex">
                    <a href="/notifications/<%= notification.id %>">
                      <!-- <button class="btn btn-outline-dark followersViewBtn">View</button> -->
                      <img src="<%= notification.listingImage %>"
                        style="width:60px; border: 1px solid gray; border-radius: 10px; object-fit: cover;">
                    </a>
                  </div>
                </div>
                <% }); %>
                  <% } %>
        </div>
      </div>
    </div>
  </div>

