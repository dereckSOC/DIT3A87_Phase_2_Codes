<%- include("../partials/header") %>

  <!-- banner -->
  <div class="container px-0"
    style="background: url('<%= user.banner %>'); height: 300px; width: 100%; background-size: cover; object-fit: cover; background-position: center center; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
    <div class="justify-content-between align-items-center d-flex">
      <div class="px-4 mx-1">
      </div>
      <div>
        <!-- approve/remove agent -->
        <% if(user.isAgent && currentUser && currentUser.isAdmin){ %>
          <form action="/dashboard/agents/<%= user._id %>?_method=PUT" method="POST" class="text-center"
            style="position:relative; top: 10px;">
            <% if(user.agentStatus==false){ %>
              <button type="submit" name="user[agentStatus]" value="true" class="btn approveBtn"
                style="background: #41e792; color: white; font-weight: 600; font-size: 0.9em;">Approve Agent</button>
              <% } else{ %>
                <button type="submit" name="user[agentStatus]" value="false" class="btn approveBtn"
                  style="background: #DC3545; color: white; font-weight: 600; font-size: 0.9em;">Remove Agent</button>
                <% } %>
          </form>
          <% } %>
      </div>
      <div>
        <!-- upload banner button -->
        <form action="/user/<%=user._id %>/banner?_method=PUT" method="POST" enctype="multipart/form-data"
          id="bannerForm">
          <span class="justify-content-end d-flex">
            <label for="file-upload" class="customBannerUpload px-3">
              <i class="fas fa-camera"></i>
            </label>
            <input type="file" id="file-upload" name="banner" onchange="this.form.submit()" id="bannerUpload"
              accept="image/*">
          </span>
        </form>
      </div>
    </div>

    <!-- profile image -->
    <span class="justify-content-center d-flex">
      <img src="<%= user.image %>" alt="user profile image" class="profileImage">
    </span>
    <!-- upload profile image button -->
    <form action="/user/<%=user._id %>/image?_method=PUT" method="POST" enctype="multipart/form-data" id="imageForm">
      <label for="file-upload-image" class="customImageUpload px-3">
        <i class="fas fa-camera"></i>
      </label>
      <input type="file" id="file-upload-image" name="image" onchange="this.form.submit()" id="imageUpload"
        accept="image/*">
    </form>
  </div>



  <!-- follow & chat & edit profile -->
  <div class="container align-items-center justify-content-between d-flex mt-3 px-4">
    <div>
      <div class="left text-center">
        <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
          <a class="btn btn-outline-dark profileOverviewBtn" href="/dashboard/listings">
            <span>All Listings</span>
          </a>
          <% } %>
      </div>

      <div class="right text-center">
        <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
          <a class="btn btn-outline-dark profileOverviewBtn" href="/user/<%= user._id %>/reviews">
            <span>All Reviews</span>
          </a>
          <% } %>
      </div>
    </div>
    <div>
      <% if(!currentUser){ %>
        <% } else { %>
          <% if(user._id.equals(currentUser._id)){ %>
            <% } else { %>
              <div class="left">
                <a href="/follow/<%= user.id %>">
                  <button class="btn btn-outline-dark followBtn">Follow</button>
                </a>
              </div>
              <div class="right">
                <form action="http://localhost:8800/api/conversations/<%= currentUser._id %>/<%= user.id %>"
                  method="POST">
                  <button type="submit" class="btn btn-outline-dark chatBtn">Chat</button>
                </form>
              </div>
              <% } %>
                <% } %>
    </div>
  </div>



  <!-- user details -->
  <div class="container">
    <p id="profileUsername" class="text-center pt-1 my-0">
      <%= user.username %>
    </p>
    <% if (user.rating===0) { %>
      <span class="justify-content-center d-flex pb-3 my-0" style="font-size: 0.9em; color: gray;">
        <em>No reviews yet.</em>
      </span>
      <% } else { %>
        <div class="text-center mb-3">
          <p class="m-0">
            <%= user.rating.toFixed(2) %>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star <% if (user.rating > 1.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 2.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 3.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 4.5) { %> checked <% } %>"></span>
              (<%= user.reviews.length %>)
          </p>
        </div>
        <% } %>

          <div class="justify-content-center d-flex">
            <div class="left">
              <span id="userRole">
                <i class="fas fa-user pr-1"></i>
                <% if(user.isAgent==true){ %>
                  Agent
                  <% } else if(user.isAdmin==true){ %>
                    Admin
                    <% } else { %>
                      Seeker
                      <% } %>
              </span>
            </div>
            <div class="left right">
              <span>
                <% if(user.agentStatus==true || user.isAdmin==true){ %>
                  <span id="userStatus"><i class="fas fa-check pr-1"></i>Verified</span>
                  <% } else { %>
                    <% if(user.isAgent==true){ %>
                      <span id="userStatus"><i class="fas fa-clock pr-1"></i>Pending</span>
                      <% } else { %>
                        <% } %>
                          <% } %>
              </span>
            </div>
            <% if(user.isAgent==true){ %>
              <div class="right">
                <span id="ceaNum">
                  <i class="fas fa-align-center pr-1"></i>
                  <%= user.cea %>
                </span>
                <br>
              </div>
              <% } %>
          </div>
  </div>
  <hr>



  <div class="container">
    <div class="row">
      <!-- show profile details -->
      <div class="col-5 borderStyle">
        <div class="align-items-center d-flex pl-4 pr-2 py-2 mb-4 justify-content-between headerStyle">
          <div class="left">
            <p class="profileHeader my-0">Profile Details</p>
          </div>
          <div class="right">
            <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
              <a class="btn btn-outline-dark profileBtn" href="/user/<%= user._id %>/edit">
                <span style="font-size: 0.9em;">Edit</span>
              </a>
              <% } %>
          </div>
        </div>
        <div class="row px-3" id="profileDetails">
          <div class="col-4">
            <span>Joined:</span>
          </div>
          <div class="col-8">
            <p>
              <%= moment(user.createdAt).format('DD MMMM YYYY'); %> (<%= moment(user.createdAt).fromNow() %>)
            </p>
          </div>
          <div class="col-4">
            <span>First name:</span>
          </div>
          <div class="col-8">
            <p>
              <%= user.firstName %>
            </p>
          </div>
          <div class="col-4">
            <span>Last name:</span>

          </div>
          <div class="col-8">
            <p>
              <%= user.lastName %>
            </p>
          </div>
          <div class="col-4">
            <span>Email:</span>
          </div>
          <div class="col-8">
            <p>
              <a href="mailto:<%= user.email %>" style="color: black;">
                <%= user.email %>
              </a>
            </p>
          </div>
          <% if(user.isAgent==true){ %>
            <div class="col-4">
              <span>CEA:</span>
            </div>
            <div class="col-8">
              <p>
                <%= user.cea %>
              </p>
            </div>
            <% } %>
              <div class="col-4">
                <span>Gender:</span>
              </div>
              <div class="col-8">
                <p>
                  <%= user.gender %>
                </p>
              </div>
              <div class="col-4">
                <span>Phone:</span>
              </div>
              <div class="col-8">
                <p>
                  <%= user.phone %>
                </p>
              </div>
              <div class="col-4">
                <span>Address:</span>
              </div>
              <div class="col-8">
                <p>
                  <%= user.streetName %><br>
                    <%= user.unitNumber %><br>
                      <%= user.country %><br>
                        <%= user.state %><br>
                          <%= user.postalCode %>
                </p>
              </div>
        </div>
      </div>

      <!-- show listings -->
      <div class="col-7 borderStyle">
        <div class="align-items-center d-flex pl-4 pr-2 py-2 mb-4 justify-content-between headerStyle">
          <div class="left">
            <p class="profileHeader my-0">Listings</p>
          </div>
          <div class="right">
            <a class="btn btn-outline-dark profileBtn" href="/dashboard/listings">
              <span style="font-size: 0.9em;">View All</span>
            </a>
          </div>
        </div>
        <% if(user.isAgent==true || user.isAdmin==true){ %>
          <% if(listings==0){ %>
            <p class="px-3">
              <em>No listings yet.</em>
            </p>
            <% } else { %>
              <% listings.forEach(function(listing) { %>
                <div class="row align-items-center d-flex mt-2 px-3">
                  <div class="col-2">
                    <a href="/listings/<%= listing.id %>">
                      <img src="<%= listing.thumbnail %>"
                        style="background-size: cover; width: 85px; height: 85px; object-fit: cover; background-position: center center; border-radius: 50%;">
                    </a>
                  </div>
                  <div class="col-6 pl-5">
                    <div class="mb-3">
                      <a href="/listings/<%= listing.id %>" style="color: black; font-weight: 600;">
                        <%= listing.name %>
                      </a>
                    </div>
                    <% if(currentUser&&listing.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){ %>
                      <div class="left">
                        <a class="btn btn-outline-dark profileListingEdit" href="/listings/<%= listing.id %>">View</a>
                      </div>
                      <div class="left right">
                        <a class="btn btn-outline-dark profileListingEdit"
                          href="/listings/<%= listing._id %>/edit">Edit</a>
                      </div>
                      <div class="right">
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                          <button class="btn btn-outline-dark profileListingDelete">Delete</button>
                        </form>
                      </div>
                      <div class="col-4">
                        <%= moment(listing.createdAt).fromNow() %>
                      </div>
                      <% } %>
                  </div>
                </div>
                <% }); %>
                  <% } %>
                    <% } %>
      </div>

      <!-- show notifications -->
      <div class="col-5 borderStyle pt-0">
        <div class="align-items-center d-flex pl-4 pr-2 py-2 justify-content-between headerStyle">
          <div class="left">
            <p class="profileHeader my-0">Notifications</p>
          </div>
          <div class="right">
            <a class="btn btn-outline-dark profileBtn" href="/notifications">
              <span style="font-size: 0.9em;">View All</span>
            </a>
          </div>
        </div>
        <div class="px-3">
          <% if(user.notifications=="" ){ %>
            <p class="mt-3">
              <em>No notifications yet.</em>
            </p>
            <% } else { %>
              <% allNotifications.forEach(function(notification) { %>
                <a href="/listings/<%= notification.listingId %>">
                  <%= notification.username %> created a new listing
                </a>
                <img src="<%= notification.image %>">
                <% }); %>
                  <% } %>
        </div>
      </div>



      <!-- show reviews -->
      <div class="col-7 borderStyle pt-0">
        <div class="align-items-center d-flex pl-4 pr-2 py-2 justify-content-between headerStyle">
          <div class="left">
            <p class="profileHeader my-0">Reviews</p>
          </div>
          <div>
            <div class="left">
              <% if(currentUser && currentUser.isAgent){ %>
                <% } else { %>
                  <div>
                    <a class="btn btn-outline-dark reviewBtn <% if (currentUser && user.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>"
                      href="/user/<%= user._id %>/reviews/new">
                      Write
                    </a>
                  </div>
                  <% } %>
            </div>
            <div class="right">
              <a class="btn btn-outline-dark reviewBtn" href="/user/<%= user._id %>/reviews">
                View All
              </a>
            </div>
          </div>
        </div>
        <div class="px-3">
          <% if (user.rating===0) { %>
            <div class="mt-3">
              <em>No reviews yet.</em>
            </div>
            <% } else { %>
              <p class="m-0 pt-3" style="font-weight: 600; font-size: 1.1em;">Latest reviews</p>
              <% user.reviews.slice(0, 3).forEach(function(review){ %>
                <div class="row">
                  <div class="col-12 mt-3">
                    <div class="row">
                      <div class="col-6">
                        <p class="m-0">Review by:
                          <a href="">
                            <%= review.author.username %>
                          </a>
                        </p>
                        <p class="m-0">
                          <em>
                            <%= review.updatedAt.toDateString() %>,
                              <%= moment(review.createdAt).fromNow() %>
                          </em>
                        </p>
                        <span>
                          <%- '<span class="fa fa-star checked"></span>' .repeat(review.rating) %>
                            <%- '<span class="fa fa-star"></span>' .repeat(5 - review.rating) %>
                        </span>
                      </div>
                      <div class="col-6">
                        <%if(currentUser&&review.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){%>
                          <div class="left">
                            <a class="btn btn-outline-dark editDeleteReviewBtn"
                              href="/user/<%=user._id %>/reviews/<%=review._id %>/edit">Edit</a>
                          </div>
                          <div class="right">
                            <form id="delete-form" action="/user/<%=user._id %>/reviews/<%=review._id %>?_method=DELETE"
                              method="POST">
                              <input type="submit" class="btn btn-outline-dark editDeleteReviewBtn" value="Delete">
                            </form>
                          </div>
                          <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 mt-3">
                    <div class="row">
                      <div class="col-3">
                        <img src="<%= review.author.image %>" style="width: 100%; border-radius: 25px;">
                      </div>
                      <div class="col-9">
                        <p style="text-align: justify; white-space: pre;">
                          <%= review.text %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
                <% }); %>
                  <% } %>
        </div>
      </div>



      <!-- show followers -->
      <div class="col-5 borderStyle pt-0">
        <div class="align-items-center d-flex pl-4 pr-2 py-2 justify-content-between headerStyle">
          <div class="left">
            <p class="profileHeader my-0">Followers</p>
          </div>
          <div class="right">
            <a class="btn btn-outline-dark profileBtn" href="/notifications">
              <span style="font-size: 0.9em;">View All</span>
            </a>
          </div>
        </div>
        <div class="px-3">
          <% if(user.followers=="" ){ %>
            <p class="mt-3">
              <em>No followers yet.</em>
            </p>
            <% } else { %>
              <% allFollowers.forEach(function(followers) { %>
                <div class="pt-3">
                  <img src="<%= followers.image %>" style="width:70px; border-radius: 50%; object-fit: cover;">
                  <a href="/user/<%= followers._id %>" class="pl-4">
                    <%= followers.username %>
                  </a>
                </div>
                <% }); %>
                  <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/footer") %>