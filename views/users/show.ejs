                    <% } else if(user.isAdmin==true){ %>
                      Admin
                      <% } else { %>
                        Seeker
                        <% } %>
                </p>
              </div>
              <div class="col-3">
                <span>Name:</span>
              </div>
              <div class="col-9">
                <p>
                  <%= user.firstName + " " + user.lastName %>
                </p>
              </div>
              <div class="col-3">
                <span>Email:</span>
              </div>
              <div class="col-9">
                <p>
                  <a href="mailto:<%= user.email %>" style="color: black;">
                    <%= user.email %>
