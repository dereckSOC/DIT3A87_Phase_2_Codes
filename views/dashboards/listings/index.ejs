<%- include("../../partials/header") %>

<div style="overflow-x: hidden;">
  <div class="row">
    <div class="col-3">
      <div class="navigation sticky-top">
        <ul>
          <li class="list navigationHover">
            <a href="/dashboard">
              <span class="icon activeText">
                <ion-icon name="layers-outline"></ion-icon>
              </span>
              <span class="title activeText">Overview</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/accounts">
              <span class="icon">
                <ion-icon name="people-outline"></ion-icon>
              </span>
              <span class="title">Accounts</span>
            </a>
          </li>
          <li class="list active">
            <a href="/dashboard/listings">
              <span class="icon">
                <ion-icon name="home-outline"></ion-icon>
              </span>
              <span class="title">Listings</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/comments">
              <span class="icon">
                <ion-icon name="chatbubbles-outline"></ion-icon>
              </span>
              <span class="title">Comments</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/reviews">
              <span class="icon">
                <ion-icon name="star-outline"></ion-icon>
              </span>
              <span class="title">Reviews</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-9">
      <div class="row mr-5">
        <div class="col-12 mb-2">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
              <li class="breadcrumb-item"><a href="/listings">Home</a></li>
              <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">Listings</li>
            </ol>
          </nav>
        </div>
        <div class="col-12">
          <div class="g text-center">
            <div class="justify-content-between d-flex px-3">
              <p class="py-1 my-1">Total Listings</p>
              <p class="py-1 my-1">
                <%= listings.length %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row accountTableHeading mr-5 px-4 mt-4">
        <p style="font-weight: 500; font-size: 1.1em;">Listings</p>
        <table class="table table-sortable">
          <thead>
            <tr>
              <th style="pointer-events: none;" class="justify-content-start d-flex">
                <i class="fas fa-sort"></i>
              </th>
              <th>Listing Name</th>
              <th>Price</th>
              <th>District</th>
              <th>Type</th>
              <th>Status</th>
              <th>Analytics</th>
              <th style="pointer-events: none!important;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(listings.length==0){ %>
              <tr>
                <td><em>No listings yet.</em></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            <% } %>
            <% var idArr = []; listings.reverse().forEach(function(listing) { var id = listing._id; idArr.push(id);%>
              <tr>
                <td onclick="window.location='/listings/<%= listing._id %>';">
                  <a href="/listings/<%= listing._id %>">
                    <img src="<%= listing.thumbnail %>" alt="" style="border-radius: 10px; width: 50px; height:50px;">
                  </a>
                </td>
                <td class="pt-4" onclick="window.location='/listings/<%= listing._id %>';">
                  <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: black; font-size: 0.95em;">
                    <% if(listing.name.length<14){ %>
                      <%= listing.name.substring(0, 14) %>
                    <% } else { %>
                      <%= listing.name.substring(0, 14) + " ..." %>
                    <% } %>
                  </a>
                </td>
                <td class="pt-4" onclick="window.location='/listings/<%= listing._id %>';">
                  <span><%= "S$" + listing.price %></span>
                </td>
                <td class="pt-4" onclick="window.location='/listings/<%= listing._id %>';">
                  <span><%= listing.district %></span>
                </td>
                <td class="pt-4" onclick="window.location='/listings/<%= listing._id %>';">
                  <span><%= listing.type %></span>
                </td>
                <td class="pt-4" onclick="window.location='/listings/<%= listing._id %>';">
                  <% if(listing.archiveStatus==true){ %>
                    <span class="badge badge-archive">Archived</span>
                  <% } else if(listing.soldStatus==true) { %>
                    <span class="badge badge-danger">Sold</span>
                  <% } else { %>
                    <span class="badge badge-success">Available</span>
                  <% } %>
                </td>
                <td class="pt-4">
                  <a href="" data-toggle="modal" data-target="#analyticTarget<%= id %>" style="color: black;">
                    <div class="col-12 mt-1 px-0">
                      <ion-icon name="trending-up-outline"></ion-icon>
                      <span class="pl-1" style="font-size: 1em; color: black">View Analytics</span>
                    </div>
                  </a>
                  <!-- Analytic Modal -->
                  <div class="modal fade" id="analyticTarget<%= id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                  aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="justify-content-between align-items-center d-flex border-bottom">
                          <div class="py-4"></div>
                          <div>
                            <p class="modal-title pl-5" id="exampleModalLongTitle">Listing Insights</p>
                          </div>
                          <div>
                            <button type="button" class="close mr-3" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                        </div>
                        <div class="modal-body" style="height: 240px!important;">
                          <div class="row">
                            <div class="col-12 pb-3" style="border-bottom: 1px lightgray solid;">
                              <div class="row">
                                <div class="col-2">
                                      <img src="<%= listing.thumbnail %>"
                                      style="background-size: cover; width: 100%; object-fit: cover; background-position: center center; border-radius: 10px;">
                                </div>
                                <div class="col-10">
                                  <div class="row">
                                    <div class="col-12" style="font-weight: 600;">
                                      <% if(listing.name.length<40){ %>
                                        <%= listing.name.substring(0, 40) %>
                                          <% } else { %>
                                            <%= listing.name.substring(0, 40) + " ..." %>
                                              <% } %>
                                    </div>
                                    <div class="col-12">
                                      <span style="color: rgb(145, 145, 145);">
                                        <%= " - Listed on " + moment(listing.createdAt).format('MMM DD, YYYY') %>
                                      </span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="col-12 pt-3">
                              <p style="font-weight:600; font-size: 0.85em;">Overall Insights</p>
                              <div class="loader" id="loader-<%=id%>"></div>
                              <a id="<%=id%>"></a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="justify-content-start d-flex pt-2">
                  <a href="/listings/<%= listing._id %>" class="btn dashboardManageBtn" style="border-radius: 0%!important;">
                    <ion-icon name="eye-outline" class="showBtn"></ion-icon>
                  </a>
                  <a class="btn dashboardManageBtn" style="border-radius: 0%!important;" href="/listings/<%= listing._id %>/edit">
                    <ion-icon name="create-outline" class="editBtn"></ion-icon>
                  </a>
                  <form action="/listings/<%= listing._id %>/dashboard?_method=DELETE" method="POST">
                    <button class="btn dashboardManageBtn">
                      <ion-icon name="trash-outline" class="trashBtn"></ion-icon>
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/clickRate.js"></script>
<% if(currentUser){ %>
  <% idArr.forEach((id, index)=> { %>
    <script>getClickRate("<%=id%>")</script>
  <% }); %>
<% } else{ %>
<% } %>

<%- include("../../partials/footer") %>
