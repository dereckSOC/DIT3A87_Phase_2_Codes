<%- include("../../partials/header") %>

<div style="overflow-x: hidden;">
  <div class="row">
    <div class="col-3">
      <div class="navigation sticky-top">
        <ul>
          <li class="list navigationHover">
            <a href="/dashboard">
              <span class="icon activeText">
                <ion-icon name="layers-outline"></ion-icon>
              </span>
              <span class="title activeText">Overview</span>
            </a>
          </li>
          <li class="list active">
            <a href="/dashboard/accounts">
              <span class="icon">
                <ion-icon name="people-outline"></ion-icon>
              </span>
              <span class="title">Accounts</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/listings">
              <span class="icon">
                <ion-icon name="home-outline"></ion-icon>
              </span>
              <span class="title">Listings</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/comments">
              <span class="icon">
                <ion-icon name="chatbubbles-outline"></ion-icon>
              </span>
              <span class="title">Comments</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/reviews">
              <span class="icon">
                <ion-icon name="star-outline"></ion-icon>
              </span>
              <span class="title">Reviews</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-9">
      <div class="row mr-5">
        <div class="col-12 mb-2">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
              <li class="breadcrumb-item"><a href="/listings">Home</a></li>
              <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">Accounts</li>
            </ol>
          </nav>
          <nav aria-label="breadcrumb mb-2" class="d-none">
            <ol class="breadcrumb breadcrumbSec mb-0">
              <li class="breadcrumb-item"><a href="/dashboard/accounts/seeker">Seeker</a></li>
              <li class="breadcrumb-item"><a href="/dashboard/accounts/agent">Agent</a></li>
              <li class="breadcrumb-item"><a href="/dashboard/accounts/admin">Admin</a></li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="row accountTableHeading mr-5 px-4 mt-2">
        <div class="col-12 px-0">
          <div class="justify-content-between d-flex">
            <% if(noMatch !== undefined){ %>
              <form action="/dashboard/accounts" method="GET" class="form-inline">
                <div class="box justify-content-end d-flex pb-3">
                  <i class="fas fa-filter"></i>
                    <select name="sort" id="sort">
                      <option value="" disabled selected hidden>Sort By</option>
                      <option value="HighestRating" <% if(data.sort == 'HighestRating') {%> selected <%} %>>Highest Rating</option>
                      <option value="LowestRating" <% if(data.sort == 'LowestRating') {%> selected <%} %>>Lowest Rating</option>
                      <option value="Recent" <% if(data.sort == 'Recent') {%> selected <%} %>>Recent</option>
                      <option value="Oldest" <% if(data.sort == 'Oldest') {%> selected <%} %>>Oldest</option>
                    </select>
                    <select name="filterAccType" id="filterAccType">
                      <option value="" disabled selected hidden>Filter</option>
                      <option value="Admin" <% if(data.filterAccType == 'Admin') {%> selected <%} %>>Admin</option>
                      <option value="Agent" <% if(data.filterAccType == 'Agent') {%> selected <%} %>>Agent</option>
                      <option value="Seeker" <% if(data.filterAccType == 'Seeker') {%> selected <%} %>>Seeker</option>
                      <option value="All" <% if(data.filterAccType == 'All') {%> selected <%} %>>All</option>
                    </select>
                    <input type="submit" value= "GO" name="applyFilter" class="btn btn-info d-flex justify-content-center align-items-center text-align-center" style="padding: 10px 20px 10px 20px;"></input>
                  </div>
              </form>
            <% } %>
          </div>
          <div class="justify-content-between d-flex">
            <div>
              <p style="font-weight: 500; font-size: 1.1em;">Users</p>
            </div>
            <div class="box justify-content-end d-flex pb-3">
              <% if(noMatch !== undefined){ %>
                <form action="/dashboard/accounts" method="GET" class="form-inline">
                  <div class="form-group">
                    <input type="text" name="search" placeholder="Search Users">
                      <button><i class="fas fa-search"></i></button>
                  </div>
                </form>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-12 text-right" style="font-size: 0.88em;">
          <em>
            <% if(users.length==0){ %>
              Search result: 0—0
            <% } else { %>
              Search result: <%= (Number(current)*8)-7 %>—<%= users.length+(Number(current)-1)*8 %>
            <% } %>
          </em>
        </div>
        <table class="table table-sortable">
          <thead>
            <tr>
              <th style="pointer-events: none;" class="justify-content-start d-flex">
                <i class="fas fa-sort"></i>
              </th>
              <th>Username</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Role</th>
              <th style="pointer-events: none!important;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(users.length==0){ %>
              <tr>
                <% if(noMatch !== undefined){ %>
                  <td><em><%= noMatch %></em></td>
                <% } else { %>
                  <td><em>No users yet.</em></td>
                <% } %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            <% } %>
            <% users.forEach(function(user){ %>
              <tr onclick="window.location='/user/<%= user._id %>';">
                <td><img src="<%= user.image %>" alt="" style="border-radius: 50%; width: 50px; height:50px;"></td>
                <td class="pt-4"><%= user.username %></td>
                <td class="pt-4"><%= user.firstName + " " + user.lastName %></td>
                <td class="pt-4">
                  <a href="mailto:<%= user.email %>" style="color: black; font-size: 0.9em;">
                    <%= user.email %>
                  </a>
                </td>
                <td class="pt-4"><%= user.phone %></td>
                <td class="pt-4">
                  <% if(user.isAdmin==true){ %>
                    <span class="badge badge-admin">Admin</span>
                  <% } else if(user.isAgent==true) { %>
                    <span class="badge badge-warning">Agent</span>
                  <% } else { %>
                    <span class="badge badge-info">Seeker</span>
                  <% } %>
                  <% if(user.isAgent==true && user.agentStatus==false){ %>
                    <span class="badge badge-danger">Pending</span>
                  <% } else if(user.isAgent==true && user.agentStatus==true){ %>
                    <span class="badge badge-success">Verified</span>
                  <% } else { %>
                  <% } %>
                </td>
                <td class="justify-content-start d-flex pt-2">
                  <a href="/user/<%= user._id %>" class="btn dashboardManageBtn" style="border-radius: 0%!important;">
                    <ion-icon name="eye-outline" class="showBtn"></ion-icon>
                  </a>
                  <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                    <a class="btn dashboardManageBtn" style="border-radius: 0%!important;" href="/user/<%= user._id %>/edit">
                      <ion-icon name="create-outline" class="editBtn"></ion-icon>
                    </a>
                    <form action="/user/<%= user._id %>/dashboard?_method=DELETE" method="POST">
                      <button class="btn dashboardManageBtn">
                        <ion-icon name="trash-outline" class="trashBtn"></ion-icon>
                      </button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="row text-center pr-5">
        <div class="col-12 justify-content-center d-flex pr-5">
          <% if (pages && pages > 0) { %>
            <ul class="pagination text-center">
              <% if (current == 1) { %>
                <li class="disabled"><a class="border px-3 py-2">First</a></li>
              <% } else { %>
                <li><a class="border px-3 py-2" href="/dashboard/accounts<%if(search){%>?search=<%=search%><%}%>">First</a></li>
              <% } %>
          
              <% if (current == 1) { %>
                <li class="disabled"><a class="border px-3 py-2">«</a></li>
              <% } else { %>
                <li><a class="border px-3 py-2" href="/dashboard/accounts?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
              <% } %>
          
              <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
              <% if (i !== 1) { %>
                <li class="disabled"><a class="border px-3 py-2">...</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                  <li class="active"><a class="border px-3 py-2"><%= i %></a></li>
                <% } else { %>
                  <li><a class="border px-3 py-2" href="/dashboard/accounts?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                  <li class="disabled"><a class="border px-3 py-2">...</a></li>
                <% } %>
              <% } %>
          
              <% if (current == pages) { %>
                <li class="disabled"><a class="border px-3 py-2">»</a></li>
              <% } else { %>
                <li><a class="border px-3 py-2" href="/dashboard/accounts?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
              <% } %>
          
              <% if (current == pages) { %>
                <li class="disabled"><a class="border px-3 py-2">Last</a></li>
              <% } else { %>
                <li><a class="border px-3 py-2" href="/dashboard/accounts?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
              <% } %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../partials/footer") %>