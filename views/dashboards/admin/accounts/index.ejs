<%- include("../../../partials/header") %>

<div style="overflow-x: hidden;">
  <div class="row">
    <div class="col-3">
      <div class="navigation sticky-top">
        <ul>
          <li class="list navigationHover">
            <a href="/dashboard">
              <span class="icon activeText">
                <ion-icon name="layers-outline"></ion-icon>
              </span>
              <span class="title activeText">Overview</span>
            </a>
          </li>
          <li class="list active">
            <a href="/dashboard/accounts">
              <span class="icon">
                <ion-icon name="people-outline"></ion-icon>
              </span>
              <span class="title">Accounts</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/listings">
              <span class="icon">
                <ion-icon name="home-outline"></ion-icon>
              </span>
              <span class="title">Listings</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/comments">
              <span class="icon">
                <ion-icon name="chatbubbles-outline"></ion-icon>
              </span>
              <span class="title">Comments</span>
            </a>
          </li>
          <li class="list navigationHover">
            <a href="/dashboard/reviews">
              <span class="icon">
                <ion-icon name="star-outline"></ion-icon>
              </span>
              <span class="title">Reviews</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-9 p-0">




      
      <!-- pending -->
  <p style="font-weight: bold; color: blue;">PENDING AGENTS</p>
  <% if(users.agentStatus==false){ %>
    nth here
    <% } %>
      <% users.forEach(function(user){ %>
        <% if(user.isAgent==true && user.agentStatus==false){ %>
          <p>
            Username: <strong>
              <%= user.username %>
            </strong>
            Status:
            <strong>Pending</strong>
          </p>
          <form action="/dashboard/agents/<%= user._id %>?_method=PUT" method="POST">
            <% if(user.agentStatus==false){ %>
              <button type="submit" name="user[agentStatus]" value="true">tick</button>
              <% } else{ %>
                <button type="submit" name="user[agentStatus]" value="false">cross</button>
                <% } %>
          </form>
          <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
          <% } %>
            <% }); %>


              <!-- approved -->
              <br>
              <p style="font-weight: bold; color: blue;">APPROVED AGENTS</p>
              <% users.forEach(function(user){ %>
                <% if(user.isAgent==true && user.agentStatus==true){ %>
                  <p>
                    Username: <strong>
                      <%= user.username %>
                    </strong>
                    Status:
                    <strong>Approved</strong>
                  </p>
                  <form action="/dashboard/agents/<%= user._id %>?_method=PUT" method="POST">
                    <% if(user.agentStatus==false){ %>
                      <button type="submit" name="user[agentStatus]" value="true">tick</button>
                      <% } else{ %>
                        <button type="submit" name="user[agentStatus]" value="false">cross</button>
                        <% } %>
                  </form>
                  <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
                  <% } %>
                    <% }); %>


  <span style="font-weight: bold;">seeker</span>
  <% users.forEach(function(user){ %>
    <% if(user.isAgent==false && user.isAdmin==false){ %>
      <div>
        <p>
          Username: <strong>
            <%= user.username %>
          </strong>
        </p>
        <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
          <a class="btn btn-warning" href="/user/<%= user._id %>/edit">Edit</a>
          <form action="/user/<%= user._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">DELETE</button>
          </form>
          <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
          <% } %>
      </div>
      <% } %>
        <% }); %>

          <br><span style="font-weight: bold;">agent</span>
          <% users.forEach(function(user){ %>
            <% if(user.isAgent==true){ %>
              <div>
                <p>
                  Username: <strong>
                    <%= user.username %>
                  </strong>
                </p>
                <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                  <a class="btn btn-warning" href="/user/<%= user._id %>/edit">Edit</a>
                  <form action="/user/<%= user._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">DELETE</button>
                  </form>
                  <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
                  <% } %>
              </div>
              <% } %>
                <% }); %>

                  <span style="font-weight: bold;">admin</span>
                  <% users.forEach(function(user){ %>
                    <% if(user.isAdmin==true){ %>
                      <div>
                        <p>
                          Username: <strong>
                            <%= user.username %>
                          </strong>
                        </p>
                        <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                          <a class="btn btn-warning" href="/user/<%= user._id %>/edit">Edit</a>
                          <form action="/user/<%= user._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                          </form>
                          <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
                          <% } %>
                      </div>
                      <% } %>
                        <% }); %>
    </div>
  </div>
</div>

  

