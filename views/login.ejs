<%- include("partials/header") %>
  <style>
    nav {
      margin-bottom: 50px;
    }

    .footer {
      margin-top: 50px;
    }
  </style>
  <div class="container p-0" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="container-login">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="/login" method="POST" class="sign-in-form">
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="username" placeholder="Username" required />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" required />
            </div>
            <input type="submit" value="Login" class="btn solid" />
          </form>
          <form class="sign-up-form" action="/register" method="POST" enctype="multipart/form-data">
            <h2 class="title">Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="username" placeholder="Username" required />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" required />
            </div>
            <ul class="typeOfRole">
              <li>
                <input onclick="hideInput()" type="radio" id="public" name="roleCode" value="public" checked />
                <label for="public">Public</label>
              </li>
              <a>or</a>
              <li>
                <input onclick="displayInput()" type="radio" id="agent" name="roleCode" value="agent" />
                <label for="agent">Agent</label>
              </li>
            </ul>
            <div id="input-agent"></div>
            <input type="submit" class="btn" value="Sign up" />
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>Hello, Friend!</h3>
            <p>
              Sign up to start searching for your dream home
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>Already Registered?</h3>
            <p>
              Log in now to start browsing!
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function displayInput() {
      var element = document.getElementById("input-agent");
      element.style.transition = "appear 2s";
      element.insertAdjacentHTML('afterbegin', `
          <div class="input-field field-ani" id="agent-field-1" style="margin-top: 0px">
            <i class="fas fa-id-card-alt"></i>
            <input type="string" name="cea" placeholder="CEA Number" required />
          </div>
          <div class="input-field field-ani" id="agent-field-2">
            <i class="fas fa-phone"></i>
            <input type="number" name="phone" placeholder="Phone Number" required />
          </div>
          <div class="img-upload-sect field-ani"id="agent-field-3">
            <a><b>Upload Profile Picture:</b></a>
            <input type="file" name="image" accept="image/*" required />
          </div>
          `)
      //animate
      element.clientHeight;


    }

    function hideInput() {
      try {
        document.getElementById("agent-field-1").remove();
        document.getElementById("agent-field-2").remove();
        document.getElementById("agent-field-3").remove();
      } catch (err) { }

    }

  </script>
  <%- include("partials/footer") %>