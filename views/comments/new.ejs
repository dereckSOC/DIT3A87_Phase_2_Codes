<%- include("../partials/header") %>

  <h3 class="text-center mt-4">
    Add new Comment to <%= listing.name %>
  </h3>

  <div class="d-flex justify-content-center">
    <form action="/listings/<%= listing._id %>/comments" method="POST">
      <div class="form-groups">
        <input class="form-control my-2" type="text" name="comment[text]" placeholder="text" style="width: 350px;">
        <button class="btn btn-info form-control">submit</button>
      </div>
    </form>

  </div>
  <div class="text-center">
    <a href="/listings">Go Back</a>
  </div>

  <%- include("../partials/footer") %>